
<% provide(:title, @user.name) %>

<div class="row">
 <aside class="span4">
    <section>
      <h1><%= @user.name %>
      <%= gravatar_for @user %></h1>
      <p><%= @user.email %></p>
    </section>
 </aside>

<div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @micropost%>
      </ol>
      <%= will_paginate @micropost %>
    <% end %>
  </div>

</div>
